<div class="ml-3 w-50">
  <h1>Create a new task</h1>
  <br>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title, class: 'form-control' %>
      <br>
      <br>
      <%= f.label :details %>
      <br>
      <%= f.text_field :details, class: 'form-control' %>
    </div>
    <br>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <br>
  <br>
  <%= link_to '↩️ back to list', root_path %>
</div>

